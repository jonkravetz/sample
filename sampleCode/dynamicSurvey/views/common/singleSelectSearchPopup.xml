<Alloy>
    <View id="popup">
        <ListView id="form" defaultItemTemplate="itemTemplate">
            <SearchBar id="searchBar" />
            <Templates>
                <ItemTemplate id="template" name="itemTemplate">
                    <View id="row">
                        <Label bindId="name" id="header" />
                        <Label bindId="address" id="address" />
                        <Label bindId="phone" id="phone" />
                        <View bindId="isRowSelected" id="selectedImage" />
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection/>
        </ListView>
    </View>
</Alloy>