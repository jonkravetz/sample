<Alloy>
    <View id="singleSelectView">
        <View id="headerView">
            <Button id="doneButton" />
            <Button id="cancelButton" />
        </View>
        <ListView id="selectListView" defaultItemTemplate="itemTemplate">
            <Templates>
                <ItemTemplate id="template" name="itemTemplate">
                    <View id="row">
                        <Label bindId="Name" id="header" />
                        <View bindId="IsSelected" id="selectedImage" />
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection/>
        </ListView>
    </View>
</Alloy>